unit FuncoesData;

interface

uses
  System.SysUtils;

type
  TFuncoesData = class

  function calculaIdade(Value: string) : Integer;

  end;

implementation

{ TFuncoesData }

function TFuncoesData.calculaIdade(Value: string): Integer;
begin
  Result := Trunc((now - StrToDate(Value)) / 365.25);
end;

end.
